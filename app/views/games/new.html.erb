<div class="container">
  <h1>New game</h1>
  <% @letters.each do |letter| %>
    <span style="background-color: #0791b8; margin: 16px; margin-top: 16px; margin-bottom: 16px; padding: 4px; font-size:24px; font-weight: bold; border: solid 2px #05c5fa; color: white;"><%= letter %></span>
  <% end %>
  <br>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
      <input type="text" name="word" class="form-control">
      <input type="submit" value="play" class="btn btn-primary">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
